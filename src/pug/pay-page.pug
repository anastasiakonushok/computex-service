extends layout/app

block page 
    include chunk/header
    main.main 
        section.hero-service 
            .container.hero-service__container 
                span.span-computex [ computex ]
                h1 Оплата и гарантия
                a.hero-service__link.white-button(href="./contact.html")
                    span.white-button__text заказать
                    span.white-button__arrow
                        svg(width="9" height="15" viewBox="0 0 9 15" fill="none" xmlns="http://www.w3.org/2000/svg")
                            path(d="M0.313814 0.313814C0.694195 -0.0665668 1.28943 -0.101147 1.70887 0.210074L1.82904 0.313814L8.25761 6.74239C8.63799 7.12277 8.67257 7.718 8.36135 8.13745L8.25761 8.25761L1.82904 14.6862C1.41062 15.1046 0.732233 15.1046 0.313814 14.6862C-0.0665666 14.3058 -0.101146 13.7106 0.210074 13.2911L0.313814 13.171L5.98477 7.5L0.313814 1.82904C-0.104605 1.41062 -0.104605 0.732233 0.313814 0.313814Z" fill="#FA5B18")
                img.hero-service__img(src="./img/pay.png" alt="")
        section.services-tab 
            .container 
                .tabs
                    ul.tab-links
                        li.active: a(href="#tab1") Оплата
                        li: a(href="#tab2") Гарантия
                    .tab-content
                        #tab1.tab.active.inner-content
                            h2 Оплата
                            ul 
                                li 
                                    h3 Наличный расчет. 
                                    p Вы можете оплатить покупку наличными в нашем офисе или при доставке товара курьером. Все наличные платежи сопровождаются выдачей кассового чека.
                                li 
                                    h3 Безналичный расчет
                                    p Для вашего удобства мы принимаем безналичные платежи. Вы можете оплатить заказ банковским переводом или через интернет-банкинг. При оформлении заказа на сайте, выберите опцию "Безналичный расчет" и следуйте инструкциям.
                                li 
                                    h3 Банковские карты
                                    p Мы принимаем оплату банковскими картами Visa, MasterCard и Мир. Оплатить заказ можно как онлайн на нашем сайте, так и в офисе или при доставке товара. Все транзакции защищены и соответствуют стандартам безопасности.
                        #tab2.tab.inner-content
                            h2 Гарантия
                            p Мы ценим доверие наших клиентов и стремимся обеспечить высочайшее качество нашей продукции. Все кондиционеры, приобретенные у нас, имеют гарантию, которая защищает вас от возможных производственных дефектов и неполадок.                        
        include chunk/section-all-link

    include chunk/footer